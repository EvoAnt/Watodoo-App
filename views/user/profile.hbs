        </a>
        <br />

      {{/each}}

    {{else}}

      <a href="/events/new">Create an event</a>

    {{/if}} --}}

    <div class="post-container">

      <h3 class="new-post">My <span class="community-title">Posts:</span></h3>
      {{#each posts}}

        <h5>{{name}}</h5>
        <a href="/community/post-details/{{_id}}" target="">
          <img class="event-img" src="{{imageUrl}}" alt="Post Image" />
        </a>
        <br />
      {{/each}}

      <br />
      <br />

    </div>
  </form>

</div>