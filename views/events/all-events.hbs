<div id="event-screen">

<h2>Events</h2>

{{#each events}}
  <div>
    <h3>{{name}}</h3>
    <p>{{location}}</p>
    <img class="event-img"  src="{{imageUrl}}" alt="event" />
    <p>added by: {{owner.userName}}</p>
    
    <form action="" method="post">

    <button class="btn">Save</button>
    </form>

    <a href="/events/event-details/{{_id}}">Event Details</a>

    <hr />
  </div>
{{/each}}
<a href="/events/new">Add Event</a>
</div>
