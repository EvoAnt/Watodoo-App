<div id="event-screen">

  <h1><span class="community-title">Local</span> Events</h1>

  <a href="/events/new">
    <button class="btn">Add Event</button>
  </a>

  <br />
  <br />

  {{#each events}}
    <div>
      <h3>{{name}}</h3>
      <p>{{location}}</p>
      <a href="/events/event-details/{{_id}}">
        <img class="event-img" src="{{imageUrl}}" alt="event" />
      </a>
      <p>{{description}}</p>
      <p>added by: {{owner.userName}}</p>

      {{!-- <form action="/users/profile/save-event/{{_id}}" method="post">
        <button class="btn" type="submit">Save Event</button>
      </form> --}}


      <hr />
    </div>
  {{/each}}
</div>