<body class="body-index">

  <div id="home-screen">

    {{!-- <h1>{{title}}</h1> --}}

    {{! <div id="watodoo-logo"> }}
    <img class="watodoo-logo" src="/images/Logo.png" alt="watodoo-logo" />
    {{! </div> }}

    <div id="discover-parent">

      <h1> <span id="discover">Discover</span> <b>your new spot</b></h1>

    </div>

  </div>

  {{! Search Bar }}

  <div id="search-bar">
    <form id=""  action="/search" method="get">
      <label for="search"></label>
      <input
        id="search"
        type="search"
        name="search"
        placeholder="Search for a type of cuisine"
      />
      <button id="search-button" type="submit">Search</button>
    </form>

  </div>

  <br />

  {{! Today, Tomorrow, This Week, Weekends  }}

  <div id="events-date">

    <button id="today">Today</button>
    <button id="tomorrow">Tomorrow</button>
    <button id="this-week">This Week</button>
    <button id="weekends">Weekends</button>

  </div>

  <br />

  <div id="box">
  {{#if results}}
  {{#each results}}
  <div id="restaurants-box">
    <div id="restaurants-database">
      <div id="restaurant">
        <div class="image-container">
          <img class="home-img" src={{imageSource}} alt="">
        </div>
        <div class="attributes">
          <div id="header">{{restaurantName}}</div>
          <p>{{address}}</p>
          <p>{{cityName}}, {{stateName}} {{zipCode}}</p>
          <p>Cuisine Type: {{cuisineType}}</p>
          <p>{{hoursInterval}}</p>

        <form action="/users/profile/save-restaurant/{{_id}}" method="post">
        <button class="home-btn" type="submit">Save</button>
      </form>

        </div>
      </div>
    </div>
  </div>
  <br />
  {{/each}}
  {{/if}}
</div>


<hr>
<footer>
  <div class="footer-content">
    <div class="footer-logo">
      <img class="watodoo-logo" src="/images/Logo.png" alt="Watodoo Logo">
      <h1>Watodoo</h1>
    </div>
    <div class="footer-links">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="#">About Us</a></li>
        <li><a href="#">Services</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </div>
    <div class="footer-social">
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
    </div>
  </div>
</footer>


</body>