<div id="event-details-screen">

  <h3>{{post.name}}</h3>
  <img class="event-img" src={{post.imageUrl}} />
  <p>{{post.description}}</p>
  <p>{{post.location}}</p>
  <p>created by: {{post.owner.userName}}</p>

  {{#if canEditPost}}

    <a href="/community/edit/{{post._id}}">Edit Post</a>
    <span> | </span>
    <a href="/community/delete/{{post._id}}">Delete Post</a>
    <span> | </span>

  {{/if}}

  <a href="/community/all-posts">Back to All Posts</a>

  <hr />

  {{#unless canEditPost}}

    <h4>Leave a comment</h4>
    <form id="comment" action="/comment/new/{{post._id}}" method="post">
      <label for="comment">Comment:</label>
      <input type="text" name="comment" id="comment" />
      <button type="submit">Submit Comment</button>
    </form>

  {{/unless}}

  {{#if comments}}

    {{#each comments}}

      <h6>- {{user.userName}}</h6>
      <p>{{comment}}</p>
      {{#if canDelete}}
      <a href="/comment/delete/{{_id}}">‚ùå</a>
      {{/if}}
      <hr>

    {{/each}}

  {{else}}

    <p>No comments posted</p>

  {{/if}}
</div>